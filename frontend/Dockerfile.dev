# Development Dockerfile for frontend
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
